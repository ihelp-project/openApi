{
  "openapi": "3.0.1",
  "info": {
    "title": "Impact Evaluator",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Draft API"
    }
  ],
  "tags": [
    {
      "name": "Home"
    },
    {
      "name": "Impact Evaluator"
    }
  ],
  "paths": {
    "/home/hi": {
      "get": {
        "tags": [
          "Home"
        ],
        "summary": "Greeting to everyone",
        "description": "This method can say hello",
        "operationId": "index",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/impact-evaluator/getPatientStats": {
      "summary": "End point to request the creations of statistics about advices provided and sent messages",
      "get": {
        "tags": [
          "Impact Evaluator"
        ],
        "summary": "Returns the stats about the selected patient in terms of primary data available, secondary data available, advices messages sent",
        "description": "The primary and secondary data returned are are related to the advice message sent",
        "operationId": "",
        "parameters": [
          {
            "name": "patient_id",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "The patient used for filtering ther result.\n"
          },
          {
            "name": "start_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "The start date for the report. Must be used together with `end_date`.\n"
          },
          {
            "name": "end_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "The end date for the report. Must be used together with `start_date`.\n"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatientStats"
                }
              }
            }
          }
        }
      }
    },
    "/impact-evaluator/getMessagesStats": {
      "summary": "End point to request the creations of statistics about all the messages in all the status (waiting for approval, sent, not delivered)",
      "get": {
        "tags": [
          "Impact Evaluator"
        ],
        "summary": "Returns the stats about all the messages present in the storage",
        "description": "",
        "operationId": "",
        "parameters": [
          {
            "name": "start_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "The start date for the report. Must be used together with `end_date`.\n"
          },
          {
            "name": "end_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "The end date for the report. Must be used together with `start_date`.\n"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Message"
                }
              }
            }
          }
        }
      }
    },
    "/impact-evaluator/getReport": {
      "get": {
        "tags": [
          "Impact Evaluator"
        ],
        "summary": "Returns the stats about the sent messages and the receipient",
        "description": "End point to request the creations of statistics about all the sent messages grouped by category and to whom were sent (clustering the patients groups by age, gender, etc...)",
        "operationId": "",
        "parameters": [
          {
            "name": "start_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "The start date for the report. Must be used together with `end_date`.\n"
          },
          {
            "name": "end_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "The end date for the report. Must be used together with `start_date`.\n"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessagePatients"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PatientStats": {
        "type": "object",
        "properties": {
          "primaryDataOfInterest": {
            "$ref": "#/components/schemas/PrimaryDataOfInterest"
          },
          "secondaryDataOfInterest": {
            "$ref": "#/components/schemas/SecondaryDataOfInterest"
          },
          "sentMsgs": {
            "$ref": "#/components/schemas/Message"
          }
        }
      },
      "PrimaryDataOfInterest": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "point": {
              "$ref": "#/components/schemas/Point"
            }
          }
        }
      },
      "SecondaryDataOfInterest": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "point": {
              "$ref": "#/components/schemas/Point"
            }
          }
        }
      },
      "Message": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "category": {
              "type": "string",
              "format": "string"
            },
            "content": {
              "type": "string",
              "format": "string"
            },
            "status": {
              "type": "string",
              "format": "string"
            }
          }
        }
      },
      "MessagePatients": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "category": {
              "type": "string",
              "format": "string"
            },
            "number": {
              "type": "number",
              "format": "number"
            },
            "patientMinAge": {
              "type": "number",
              "format": "number"
            },
            "patientMaxAge": {
              "type": "number",
              "format": "number"
            },
            "patientGender": {
              "type": "number",
              "format": "number"
            }
          }
        }
      },
      "Point": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "format": "number"
          },
          "code": {
            "type": "string",
            "format": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "Date"
          }
        }
      }
    }
  }
}